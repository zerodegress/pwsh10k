{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#444444",
          "foreground": "#EEEEEE",
          "style": "plain",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "type": "os"
        },
        {
            "background": "#444444",
            "foreground": "#949494",
            "style": "plain",
            "template": "\ue0b1",
            "type": "text"
        },
        {
          "background": "#444444",
          "foreground": "#949494",
          "style": "plain",
          "template": " \uf0e7 ",
          "type": "root"
        },
        {
          "background": "#444444",
          "foreground": "#0087AF",
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#444444",
          "foreground": "#D4E157",
          "style": "plain",
          "template": "<#949494>\ue0b1 </>{{ .HEAD }} ",
          "type": "git"
        },
        {
          "background": "transparent",
          "foreground": "#444444",
          "style": "plain",
          "template": "\ue0b0",
          "type": "text"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "transparent",
          "foreground": "#444444",
          "template": "\ue0b2",
          "style": "plain",
          "type": "text"
        },
        {
            "background": "#444444",
            "foreground": "#D70000",
            "properties": {
              "status_template": "{{ if ne .Code 0 }}âœ˜ {{.Code}} <#949494>\ue0b3</>{{ end }}"
            },
            "style": "plain",
            "type": "status"
        },
        {
          "background": "#444444",
          "foreground": "#5F8787",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "plain",
          "template": "{{ if eq .Code 0 }} {{ end }}{{ .CurrentDate | date .Format }} \uf017 ",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#5FD700",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#FF0000{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\u276f ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}